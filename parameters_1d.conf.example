# **Initial Condition**
ic_type = simple

ic_grid = 128
ic_box_lengths = 1 "kpc"
ic_nlevels = 3


# **Runtime Options**
max_nboxes = 1 10 100


# **Internal Units**
density_unit = "kg / m^3"
length_unit = "m"
time_unit = "s"


# **Boundary Condition**
left_bc = reflective
right_bc = outflow


# **Thermodynamics**
ideal_gas_type = diatomic


# **CFL**
courant_number = .2d0


# **Exact Riemann Solver**
pressure_floor = 1d-10
tolerance = 1d-6
n_iteration = 100


# **Slope Limiter**
slope_limiter = van_leer
slope_limiter_omega = 0d0


# **MUSCL-Hancock solver**
solver_type = cpu_intensive


# **Drawing**
canvas = uniform .125d0 0d0 .1d0

shape = cuboid 1 56
shape_filling = uniform 1d0 0d0 1d0

shape = sphere 3d0 2.34d0 2.34d-1 'unit'
shape_filling = uniform absolute 1d0 0d0 1d0 2d0 3d0 4d0

perturb = harmonic cartesian x 0.05 32 0d0 0d0 1d0


# **Chombo Output**
prefix = './prefix'
nickname = 'hydro-simulation'
